<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/shape_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="User Agreement and Privacy Policy"
        android:textColor="#333333"
        android:textSize="13sp"
       android:paddingLeft="8dp"/>

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:text="Please fully understand that to use our "
            android:textColor="#333333"
            android:textSize="10sp"
            android:paddingLeft="12dp"/>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="services, we need to obtain your read, write "
                android:textColor="#333333"
                android:textSize="10sp"
                android:paddingLeft="12dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and network permissions. You can read the"
                android:textColor="#333333"
                android:textSize="10sp"
                android:paddingLeft="12dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp">
            <TextView
                android:id="@+id/agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="#4CAF50"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and"
                android:textColor="#333333"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Agreement"
                android:textColor="#4CAF50"
                android:textSize="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for other "
                android:textColor="#333333"
                android:textSize="10sp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="details."
                android:textColor="#333333"
                android:textSize="10sp"/>


        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/consent"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:text="Ok"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>


</LinearLayout>